                  </div>
                  <div class="option">
                    <input type="radio" class="radio" id="Uttarakhand" name="state" />
                    <label for="Uttarakhand">Uttarakhand</label>
                  </div>
                  <div class="option">
                    <input type="radio" class="radio" id="West Bengal" name="state" />
                    <label for="West Bengal">West Bengal</label>
                  </div>
                </div>

                <div class="selected">
                  Select a State
                  <p class="signedin"><%= signedin %></p>
                </div>

              </div>
            </div>
            <button class="button" id="button">
              <span></span>
              <span></span>
              <span></span>
              <span></span>
              Continue
            </button>
          </div>
        </div>
      </section>
      <script src="../PlanATrip/JS/PlanATrip.js"></script>
