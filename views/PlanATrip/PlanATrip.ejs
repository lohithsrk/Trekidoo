<%- include("../partials/head") %>
  <link rel="shortcut icon" href="/Images/Trekidoo_logo.png" type="image/x-icon">
  <title>Plan A Trip</title>
  <link rel="stylesheet" href="../PlanATrip/CSS/animation.css">
  <link rel="stylesheet" href="../PlanATrip/CSS/PlanATrip.css">
  </head>

  <body>
    <%- include("../partials/header") %>

      <section class="firstcontainer">
        <div class="blur">
          <h1>Sign In to Continue</h1>
          <form action="/PlanATrip" method="POST">
            <a href= "/login">Sign In</a>
            <a href= "/">Go Back</a>
          </form>
        </div>
        <div class="box">
          <div class="square" style="--i:0;"></div>
          <div class="square" style="--i:1;"></div>
          <div class="square" style="--i:2;"></div>
          <div class="square" style="--i:3;"></div>
          <div class="square" style="--i:4;"></div>
          <div class="innercontainer">
            <div class="container">
              <h1>Trekidoo</h1>
              <h2 class="opentext">States </h2>

              <div class="select-box">
                <div class="options-container">
                  <div class="option">
                    <input type="radio" class="radio" id="AndhraPradesh" name="state" />
                    <label for="AndhraPradesh">Andhra Pradesh</label>
                  </div>

                  <div class="option">
                    <input type="radio" class="radio" id="ArunachalPradesh" name="state" />
                    <label for="ArunachalPradesh">Arunachal Pradesh</label>
                  </div>

