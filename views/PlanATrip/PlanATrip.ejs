                    <input type="radio" class="radio" id="Assam" name="state" />
                    <label for="Assam">Assam</label>
                  </div>

                  <div class="option">
                    <input type="radio" class="radio" id="Chhattisgarh" name="state" />
                    <label for="Chhattisgarh">Chhattisgarh</label>
                  </div>

                  <div class="option">
                    <input type="radio" class="radio" id="Goa" name="state" />
                    <label for="Goa">Goa</label>
                  </div>

                  <div class="option">
                    <input type="radio" class="radio" id="Gujarat" name="state" />
                    <label for="Gujarat">Gujarat</label>
                  </div>

                  <div class="option">
                    <input type="radio" class="radio" id="Haryana" name="state" />
                    <label for="Haryana">Haryana</label>
                  </div>

                  <div class="option">
                    <input type="radio" class="radio" id="Himachal Pradesh" name="state" />
                    <label for="Himachal Pradesh">Himachal Pradesh</label>
                  </div>
                  <div class="option">
                    <input type="radio" class="radio" id="Jharkhand" name="state" />
                    <label for="Jharkhand">Jharkhand</label>
                  </div>
                  <div class="option">
                    <input type="radio" class="radio" id="Karnataka" name="state" />
                    <label for="Karnataka">Karnataka</label>
                  </div>
                  <div class="option">
                    <input type="radio" class="radio" id="Kerala" name="state" />
                    <label for="Kerala">Kerala</label>
                  </div>
                  <div class="option">
                    <input type="radio" class="radio" id="Ladakh" name="state" />
                    <label for="Ladakh">Ladakh</label>
                  </div>
                  <div class="option">
                    <input type="radio" class="radio" id="Maharashtra" name="state" />
                    <label for="Maharashtra">Maharashtra</label>
                  </div>
                  <div class="option">
                    <input type="radio" class="radio" id="Meghalaya" name="state" />
                    <label for="Meghalaya">Meghalaya</label>
                  </div>
                  <div class="option">
