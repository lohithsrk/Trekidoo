<%- include("../partials/head") %>
    <title>Register</title>
    <link rel="shortcut icon" href="/Images/Trekidoo_logo.png" type="image/x-icon">
    <link rel="stylesheet" href="../Login/register.css">
    </head>

    <body>
        <%- include("../partials/header") %>
            <section>
                <div class="color"></div>
                <div class="color"></div>
                <div class="color"></div>
                <div class="box">
                    <div class="square" style="--i:0;"></div>
                    <div class="square" style="--i:1;"></div>
                    <div class="square" style="--i:2;"></div>
                    <div class="square" style="--i:3;"></div>
                    <div class="square" style="--i:4;"></div>
                    <div class="containerRegister">
                        <div class="form">
                            <h2>Sign up</h2>
                            <form action="/register" method="POST">
                                <div class="inputbox">
                                    <input type="email" name="email" placeholder="Email" required>
                                </div>
                                <div class="inputbox">
                                    <input type="text" name="username" placeholder="Username" required>
                                </div>
                                <div class="inputbox">
                                    <input class="inputPassword" type="password" name="password" minlength="8"
                                        placeholder="Enter Password" required>
                                    <div class="eyesContainer">
                                        <img draggable="false" class="eyes" id="eye" src="/Images/eye-solid.svg"
                                            alt="" />
                                        <img draggable="false" class="eyes" id="slashedEye"
                                            src="/Images/eye-slash-solid.svg" alt="" />
                                    </div>
                                </div>
                                <div class="inputbox">
                                    <input class="inputPassword" type="password" name="confirmpassword"
                                        placeholder="Confirm Password" required>
                                </div>
                                <p id="wrongPassword">
                                    <%= wrongPassword %>
                                </p>
                                <div class="icon">
                                    <button type="submit" class="button">Sign up</button>
                                    <a class="googlebtn" href="/auth/google" role="button"><img class="google"
                                            src="/Images/google_logo.png" alt="SignIn with Google" /></a>
                                </div>
                                <div>
                                    <p class="forget">Do have an account?&nbsp;<a href="/login">Login</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
            <script src="../Login/app.js"></script>
    </body>

    </html>